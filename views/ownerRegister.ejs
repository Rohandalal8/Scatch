<%- include('./partials/header') %>

    <% if(owners.length> 0) { %>
        <p>You don't have permission to create a new owner <a href="/owner/login"
                class="text-blue-800 hover:underline">Have An Account</a></p>
        <% } else { %>
            <div class="flex justify-center items-center h-160 flex-col">
                <% if(error.length> 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <span class="block sm:inline">
                            <%= error %>
                        </span>
                    </div>
                    <% } %>

                        <div class="flex flex-col bg-white p-10 rounded-lg border border-gray-300">
                            <p class="font-bold">Create Admin Account</p>
                            <form id="form" action="/owner/registered" method="post"
                                class="flex flex-col mt-4 min-w-72">
                                <input type="text" name="fullname" placeholder="Full Name"
                                    class="border border-gray-300 p-2 rounded-lg mt-2 outline-blue-500" required>
                                <input type="text" id="email" name="email" placeholder="Email"
                                    class="border border-gray-300 p-2 rounded-lg mt-2 outline-blue-500" required>
                                <span id="emailError" class="text-red-500"></span>
                                <input type="password" name="password" placeholder="Password"
                                    class="border border-gray-300 p-2 rounded-lg mt-2 outline-blue-500" required>
                                <button
                                    class="bg-blue-500 py-2 mt-4 rounded-full text-white text-xl ease-in duration-200 cursor-pointer hover:bg-blue-700">Create
                                    Account</button>
                            </form>
                        </div>
            </div>
            <% } %>

                <script src="/javascripts/script.js"></script>
                </body>

                </html>