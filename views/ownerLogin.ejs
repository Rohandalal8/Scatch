<%- include('./partials/header') %>

    <div class="flex justify-center items-center h-160 flex-col">
        <% if(error.length> 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline">
                    <%= error %>
                </span>
            </div>
            <% } %>

                <div class="flex flex-col bg-white p-10 rounded-lg border border-gray-300">
                    <p class="font-bold">Login Admin Account</p>
                    <form id="form" action="/owner/logined" method="post" class="flex flex-col mt-4 min-w-72">
                        <input id="email" type="text" name="email" placeholder="Email"
                            class="border border-gray-300 p-2 rounded-lg mt-2 outline-blue-500" required>
                        <span id="emailError" class="text-red-500 mt-2"></span>
                        <input type="password" name="password" placeholder="Password"
                            class="border border-gray-300 p-2 rounded-lg mt-2 outline-blue-500" required>
                        <button
                            class="bg-blue-500 py-2 mt-4 rounded-full text-white text-xl ease-in duration-200 cursor-pointer hover:bg-blue-700">Login</button>
                    </form>
                    <% if(owners.length==0) { %>
                        <a href="/owner/register" class="text-blue-800 hover:underline mt-4">Create New Account</a>
                        <% } %>
                </div>
    </div>

    <script src="/javascripts/script.js"></script>
    </body>

    </html>